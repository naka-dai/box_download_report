# Box API Configuration
BOX_ROOT_FOLDER_ID=243194687037
BOX_CONFIG_PATH=config.json

# Output Directories (すべて相対パス - フォルダ内に出力)
REPORT_OUTPUT_DIR=./data
ACCESS_LOG_OUTPUT_DIR=./data
ANOMALY_OUTPUT_DIR=./data

# SQLite Database (相対パス - フォルダ内に保存)
DB_PATH=./data/box_audit.db

# ===== Anomaly Detection Settings =====
ALERT_ENABLED=False
ALERT_USER_DOWNLOAD_COUNT_THRESHOLD=200
ALERT_USER_UNIQUE_FILES_THRESHOLD=100

# Business Hours (JST)
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=20:00
ALERT_OFFHOUR_DOWNLOAD_THRESHOLD=50

# Spike Detection
ALERT_SPIKE_WINDOW_MINUTES=60
ALERT_SPIKE_DOWNLOAD_THRESHOLD=100

# ===== Email Settings (メール通知は無効化) =====
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USER=alert@example.com
SMTP_PASSWORD=xxxxxx
ALERT_MAIL_FROM=alert@example.com
ALERT_MAIL_TO=security@example.com,admin@example.com
ALERT_MAIL_SUBJECT_PREFIX=[BoxDL Alert]

# Attachment Settings
ALERT_ATTACHMENT_MAX_ROWS=5000
